    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Button 2" />
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Button 3" />
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Button 4" />
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Button 5" />
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Button 6" />


    </LinearLayout>
    </ScrollView>

</RelativeLayout>